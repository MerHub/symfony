{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-12 col-lg-6 col-xl-4">
        <section class="box ">
            <header class="panel_header">
                <h2 class="title float-left">Taxi creation</h2>
                <div class="actions panel_actions float-right">
                    <a class="box_toggle fa fa-chevron-down"></a>
                    <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                    <a class="box_close fa fa-times"></a>
                </div>
            </header>
            <div class="content-body">        <div class="row">
                    <div class="col-12">
                        <table>
                            {{ form_start(form) }}
                            <br>{{ form_label(form.photo) }}
                            {{ form_widget(form.photo) }}
                            <br>{{ form_label(form.numChassis) }}
                            {{ form_widget(form.numChassis) }}
                            <span id="misscin" ><ul><li><i class="fa fa-exclamation-triangle"></i>&nbsp; : Le numero de chassi est invalide</li></ul> </span>

                            <br>  {{ form_label(form.categorie) }}
                            {{ form_widget(form.categorie) }}


                            <br>  <input class="btn btn-primary " type="submit" value="Create"/>
                            {{ form_end(form) }}

                            <ul style="list-style: none;">
                                <li>
                                    <br>  <a class="btn btn-primary " style="margin:4px;" href="{{ path('taxi_index') }}">Back to the list</a>
                                </li>
                            </ul>
                        </table>
                    </div>
                </div> <!-- End .row -->
            </div>
        </section>    </div>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#misscin').hide();
            $('#taxibundle_taxi_numChassis').keyup(function () {
                // alert('hi');





                var x = $('#taxibundle_taxi_numChassis').val();
                if (x.length===13) {

                    $('#create').prop('disabled', false);
                    $('#misscin').hide();
                    $('#taxibundle_taxi_numChassis');

                } else {

                    $('#misscin').show();
                    $('#taxibundle_taxi_numChassis');


                    $('#create').prop('disabled', true);
                }

            });
        })
    </script>

{% endblock %}
