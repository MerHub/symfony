{% extends 'base.html.twig' %}

{% block body %}
    <h1>Taxi creation</h1>
<table>
    {{ form_start(form) }}
    <br>{{ form_label(form.photo) }}
    {{ form_widget(form.photo) }}
    <br>{{ form_label(form.numChassis) }}
    {{ form_widget(form.numChassis) }}
    <span id="misscin" ><ul><li><i class="fa fa-exclamation-triangle"></i>&nbsp; : Le numero de chassi est invalide</li></ul> </span>

    <br>  {{ form_label(form.categorie) }}
    {{ form_widget(form.categorie) }}


  <br>  <input class="btn btn-primary " type="submit" value="Create"/>
    {{ form_end(form) }}

    <ul style="list-style: none;">
        <li>
          <br>  <a class="btn btn-primary " style="margin:4px;" href="{{ path('taxi_index') }}">Back to the list</a>
        </li>
    </ul>
</table>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#misscin').hide();
            $('#taxibundle_taxi_numChassis').keyup(function () {
                // alert('hi');





                var x = $('#taxibundle_taxi_numChassis').val();
                if (x.length===13) {

                    $('#create').prop('disabled', false);
                    $('#misscin').hide();
                    $('#taxibundle_taxi_numChassis');

                } else {

                    $('#misscin').show();
                    $('#taxibundle_taxi_numChassis');


                    $('#create').prop('disabled', true);
                }

            });
        })
    </script>

{% endblock %}
