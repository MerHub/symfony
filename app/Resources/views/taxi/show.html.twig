{% extends 'base.html.twig' %}

{% block body %}
    <h1>Taxi</h1>

    <table>
        <tbody>
            <tr>
                <th>Idtaxi</th>
                <td>{{ taxi.idTaxi }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td class="fa-image" height="100px" width="100px" style="background-image: url('{{ asset('font/uploads/' ~ taxi.photo) }}')">
                </td>
            </tr>
            <tr>
                <th>Numchassis</th>
                <td>{{ taxi.numChassis }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('taxi_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('taxi_edit', { 'idTaxi': taxi.idTaxi }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
