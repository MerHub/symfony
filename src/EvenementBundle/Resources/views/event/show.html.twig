{% extends 'baseEv.html.twig' %}

{% block body %}
    <div class="col-xl-12">
        <section class="box ">
            <header class="panel_header">
                <h2 class="title float-left">Event  <td>{{ event.nom }}</td>  </h2>

                <div class="actions panel_actions float-right">
                    <a class="box_toggle fa fa-chevron-down"></a>

                </div>
            </header>
            <div class="content-body">    <div class="row">
                    <div class="col-12">

                        <table class="table">
                            <h1>Event</h1>
                            <thead>
                            <tr>

                                <th>Name</th>
                                <th>Number of places</th>
                                <th>Start</th>
                                <th>End</th>
                                <th>Date of travel</th>
                                <th>Return Date</th>
                                <th>Description</th><th>

                                </th>

                                <th> </th>
                            </tr>
                            </thead>

                                <tbody>

                                <tr>

                                    <td>{{ event.nom }}</td>


                                    <td>{{ event.nbrPlace }}</td>

                                    <td>{{ event.depart }}</td>

                                    <td>{{ event.arrivee }}</td>


                                    <td>{% if event.dateAllee %}{{ event.dateAllee|date('Y-m-d H:i:s') }}{% endif %}</td>


                                    <td>{% if event.dateRetour %}{{ event.dateRetour|date('Y-m-d H:i:s') }}{% endif %}</td>


                                    <td>{{ event.description }}</td>



                                    <td>

                                        <a class="fa fa-pencil" href="{{ path('event_edit', { 'idEvent': event.idEvent }) }}"></a>
                                    </td> <td>
                                        {{ form_start(delete_form) }}
                                        <input class="btn btn-primary" type="submit" value="Delete">
                                        {{ form_end(delete_form) }}
                                    </td>
                                </tr>
                                </tbody>



                        </table>

                    </div>
                </div>
            </div>
        </section></div>











{% endblock %}
