{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-xl-12">
        <section class="box ">
            <header class="panel_header">
                <h2 class="title float-left">Offre list</h2>
                <div class="actions panel_actions float-right">
                    <a class="box_toggle fa fa-chevron-down"></a>

                </div>
            </header>
            <div class="content-body">    <div class="row">
                    <div class="col-12">

                        <table class="table">
                            <thead>
                            <tr>



                                <th>Name</th>
                                <th>Type</th>
                                <th>Start date</th>
                                <th>End date</th>

                                <th>Offer reduction</th>
                                <th>Promo code</th>
                                <th >Image</th>
                                <th> op√©ration </th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for offre in offres %}
                                <tr>
                                    <td>{{ offre.nom }}</td>
                                    <td>{{ offre.type }}</td>
                                    <td>{% if offre.dateD %}{{ offre.dateD|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    <td>{% if offre.dateF %}{{ offre.dateF|date('Y-m-d H:i:s') }}{% endif %}</td>

                                    <td>{{ offre.reductionOffre }}</td>
                                    <td>{{ offre.codePromo }}</td>
                                    <td>
                                        <a href="" class="btn btn-warning" data-toggle="modal" data-target="#exampleModalCenter{{ offre.idOffre }}">Image</a>
                                        <div class="modal fade" id="exampleModalCenter{{ offre.idOffre }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <img src="{{ asset('font/uploads/' ~ offre.img) }}" alt="">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <a   class="fa fa-eye" href="{{ path('offre_show', { 'idOffre': offre.idOffre }) }}"></a>
                                        <a class="fa fa-pencil"  href="{{ path('offre_edit', { 'idOffre': offre.idOffre }) }}"></a>

                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </section></div>











{% endblock %}
