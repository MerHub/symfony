{% extends 'base.html.twig' %}

{% block body %}




    <section class="box ">
        <header class="panel_header">
            <h2 class="title float-left">Message Validations</h2>
            <div class="actions panel_actions float-right">
                <a class="box_toggle fa fa-chevron-down"></a>
                <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                <a class="box_close fa fa-times"></a>
            </div>
        </header>
        <div class="content-body">

            <form id="msg_validate" action="javascript:;" novalidate="novalidate">
                <div class="row">
                    <div class="col-12">


                        <div class="form-group has-error">
                            <label class="form-label">Name</label>
                            <span class="desc">e.g. "Beautiful Mind"</span>
                            <div class="controls">
                                <input type="text" class="form-control" name="formfield1" aria-required="true"><span class="error"><label id="formfield1-error" class="error" for="formfield1">This field is required.</label></span>
                            </div>
                        </div>

                        <div class="form-group has-error">
                            <label class="form-label">Email</label>
                            <span class="desc">e.g. "some@example.com"</span>
                            <div class="controls">
                                <input type="text" class="form-control" name="formfield2" aria-required="true"><span class="error"><label id="formfield2-error" class="error" for="formfield2">This field is required.</label></span>
                            </div>
                        </div>

                        <div class="form-group has-error">
                            <label class="form-label">Website</label>
                            <span class="desc">e.g. "http://www.example.com"</span>
                            <div class="controls">
                                <input type="text" class="form-control" name="formfield3" aria-required="true"><span class="error"><label id="formfield3-error" class="error" for="formfield3">This field is required.</label></span>
                            </div>
                        </div>

                        <div class="float-right">
                            <button type="submit" class="btn btn-success">Save</button>
                            <button type="button" class="btn">Cancel</button>
                        </div>






                    </div>
                </div>
            </form>
        </div>
    </section>



    <h1>Offre creation</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="Create" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('offre_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
