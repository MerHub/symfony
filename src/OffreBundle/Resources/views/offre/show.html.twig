{% extends 'base.html.twig' %}

{% block body %}
    <h1>Offre</h1>

    <table>
        <tbody>
        <tr>
            <th>Idoffre</th>
            <td>{{ offre.idOffre }}</td>
        </tr>
        <tr>
            <th>Dated</th>
            <td>{% if offre.dateD %}{{ offre.dateD|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Datef</th>
            <td>{% if offre.dateF %}{{ offre.dateF|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Type</th>
            <td>{{ offre.type }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ offre.nom }}</td>
        </tr>
        <tr>
            <th>Reductionoffre</th>
            <td>{{ offre.reductionOffre }}</td>
        </tr>
        <tr>
            <th>Codepromo</th>
            <td>{{ offre.codePromo }}</td>
        </tr>
        <tr>
            <th>Img</th>
            <td>{{ offre.img }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('offre_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('offre_edit', { 'idOffre': offre.idOffre }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
