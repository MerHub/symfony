{% extends 'base.html.twig' %}

{% block body %}

    <div class="col-12 col-lg-6 col-xl-4">
        <section class="box ">
            <header class="panel_header">
                <h2 class="title float-left">Typereclamation list</h2>
                <div class="actions panel_actions float-right">
                    <a class="box_toggle fa fa-chevron-down"></a>
                    <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                    <a class="box_close fa fa-times"></a>
                </div>
            </header>
            <div class="content-body">        <div class="row">
                    <div class="col-12">

                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Titre</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for typeReclamation in typeReclamations %}
                                <tr>
                                    <td><a href="{{ path('typereclamation_show', { 'id': typeReclamation.id }) }}">{{ typeReclamation.id }}</a></td>
                                    <td>{{ typeReclamation.titre }}</td>
                                    <td>
                                                <a href="{{ path('typereclamation_show', { 'id': typeReclamation.id }) }}" style="margin-right: 6%;"><i class="fa fa-eye"></i></a>

                                                <a href="{{ path('typereclamation_edit', { 'id': typeReclamation.id }) }}"><i class="fa fa-refresh"></i></a>

                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div> <!-- End .row -->
            </div>
        </section>    </div>
{% endblock %}
