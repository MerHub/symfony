{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-12 col-lg-6 col-xl-4">
        <section class="box ">
            <header class="panel_header">
                <h2 class="title float-left">Typereclamation</h2>
                <div class="actions panel_actions float-right">
                    <a class="box_toggle fa fa-chevron-down"></a>
                    <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                    <a class="box_close fa fa-times"></a>
                </div>
            </header>
            <div class="content-body">        <div class="row">

                    <table style="margin-bottom: 3%;">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ typeReclamation.id }}</td>
                        </tr>
                        <tr>
                            <th>Titre</th>
                            <td>{{ typeReclamation.titre }}</td>
                        </tr>
                        </tbody>
                    </table>
                            {{ form_start(delete_form) }}
                    <a href="{{ path('typereclamation_edit', { 'id': typeReclamation.id }) }}" class="btn btn-warning">Edit</a>
