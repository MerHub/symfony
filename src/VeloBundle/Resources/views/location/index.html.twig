{% extends 'base.html.twig' %}

{% block body %}
    <h1>Locations list</h1>

    <table>
        <thead>
            <tr>
                <th>Idlocation</th>
                <th>Dated</th>
                <th>Datef</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for location in locations %}
            <tr>
                <td><a href="{{ path('location_show', { 'idLocation': location.idLocation }) }}">{{ location.idLocation }}</a></td>
                <td>{% if location.dateD %}{{ location.dateD|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if location.dateF %}{{ location.dateF|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ location.prix }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('location_show', { 'idLocation': location.idLocation }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('location_edit', { 'idLocation': location.idLocation }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('location_new') }}">Create a new location</a>
        </li>
    </ul>
{% endblock %}
