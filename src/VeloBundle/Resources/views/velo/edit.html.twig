{% extends 'base.html.twig' %}

{% block body %}
<ul>
    <li>
        <a href="{{ path('velo_index') }}"><i class="fa fa-backward" style="color:#2e6da4 "></i>Back to the list</a>
    </li>

</ul>
<header class="panel_header">
    <h2 class="title float-left">Add A bicycle</h2>
    <div class="actions panel_actions float-right">
        <a class="box_toggle fa fa-chevron-down"></a>
        <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
        <a class="box_close fa fa-times"></a>
    </div>
</header>


<div class="content-body">
    <div class="row">
        <div class="col-lg-8 col-md-9 col-10">

            <div class="form-group">
                <table class="table table-striped">
    {{ form_start(edit_form) }}
                    <tr>
                        <td>{{ form_label(edit_form.type) }}</td>
                        <td>{{ form_widget(edit_form.type) }}</td>
                    </tr>
                    <tr>
                        <td>{{ form_label(edit_form.adresse) }}</td>
                        <td>{{ form_widget(edit_form.adresse) }}</td>
                    </tr>
                    <tr>
                        <td>{{ form_label(edit_form.qte) }}</td>
                        <td>{{ form_widget(edit_form.qte) }}</td>
                       <td>
                        <span id="misscin" ><ul><li><i class="fa fa-exclamation-triangle"></i>&nbsp; : Quantity is invalide</li></ul> </span>
                       </td>
                    </tr>
                    <tr>
                        <td>{{ form_label(edit_form.prix) }}</td>
                        <td>{{ form_widget(edit_form.prix) }}</td>
                    </tr>
                    <tr>
                        <td>{{ form_label(edit_form.latitude) }}</td>
                        <td>{{ form_widget(edit_form.latitude) }}</td>
                    </tr>
                    <tr>
                        <td>{{ form_label(edit_form.longitude) }}</td>
                        <td>{{ form_widget(edit_form.longitude) }}</td>
                    </tr>
                    <tr>
                        <td>{{ form_label(edit_form.photo) }}</td>
                        <td>{{ form_widget(edit_form.photo) }}</td>
                    </tr>
                    <tr>

                        <td>{{ form_widget(edit_form) }}</td>
                        <td> <input id="coursbundle_cours_Ajouter" type="submit" value="Edit" /></td>
                    </tr>

    {{ form_end(edit_form) }}
                </table>

                <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
                <script>
                    $(document).ready(function () {
                        $('#misscin').hide();
                        $('#velobundle_velo_qte').keyup(function () {






                            var x = $('#velobundle_velo_qte').val();
                            if (x>0 && x<100) {

                                $('#coursbundle_cours_Ajouter').prop('disabled', false);
                                $('#misscin').hide();
                                $('#velobundle_velo_qte');

                            } else {

                                $('#misscin').show();
                                $('#velobundle_velo_qte');


                                $('#coursbundle_cours_Ajouter').prop('disabled', true);
                            }

                        });
                    })
                </script>



            </div>




        </div>
    </div>






{% endblock %}
