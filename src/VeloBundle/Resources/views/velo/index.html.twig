{% extends 'base.html.twig' %}





{% block body %}

    <ul>
        <li>
            <a href="{{ path('velo_new') }}"><i class="fa fa-backward" style="color:#2e6da4 " ></i>Add a new Bicycle</a>
        </li>
    </ul>
<div class="col-xl-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title float-left">List of Bicycles </h2>
            <div class="actions panel_actions float-right">
                <a class="box_toggle fa fa-chevron-down"></a>
                <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                <a class="box_close fa fa-times"></a>
            </div>
        </header>
        <div class="content-body">    <div class="row">
                <div class="col-12">

                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>#</th>

                            <th>Picture</th>
                            <th>Type</th>
                            <th>Adresse</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Altitude</th>
                            <th>Longitude</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
        {% for velo in velos %}
            <tr>
                <td><a href="{{ path('velo_show', { 'id': velo.id }) }}">{{ velo.id }}</a></td>
                <td>
                    <a href="#ultraModal-{{velo.id}}" class="btn btn-warning btn-sm" data-toggle="modal">Show picture</a>
                    <div class="modal fade" id="ultraModal-{{velo.id}}" tabindex="-1" role="dialog" aria-labelledby="ultraModal-Label" style="display: none;" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">

                                    <h4 class="modal-title">Picture</h4><button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                                </div>
                                <div class="modal-body" style="padding:2px;">

                                    <center><img src="{{ asset('font/uploads/' ~ velo.photo) }}" alt="vide" width="300px"></center>

                                </div>
                                <div class="modal-footer">
                                    <button data-dismiss="modal" class="btn btn-default" type="button">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
                <td>{{ velo.type }}</td>
                <td>{{ velo.adresse }}</td>
                <td>{{ velo.qte }}</td>

                <td>{{ velo.prix }}</td>
                <td>{{ velo.latitude }}</td>
                <td>{{ velo.longitude }}</td>

                <td>
                    <ul>
                        <li>
                            <a href="{{ path('velo_show', { 'id': velo.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('velo_edit', { 'id': velo.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </section></div>

{% endblock %}
