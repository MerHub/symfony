{% extends 'base.html.twig' %}


{% block body %}
    <ul>
        <li>
            <a href="{{ path('velo_index') }}"><i class="fa fa-backward" style="color:#2e6da4 " ></i> List Of Bicycles</a>
        </li>

    </ul>
    <div class="col-xl-12">
        <section class="box ">
            <header class="panel_header">
                <h2 class="title float-left">Bicycle Details</h2>
                <div class="actions panel_actions float-right">
                    <a class="box_toggle fa fa-chevron-down"></a>
                    <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                    <a class="box_close fa fa-times"></a>
                </div>
            </header>
            <div class="content-body">    <div class="row">
                    <div class="col-12">

                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Picture</th>
                                <th>Type</th>
                                <th>Adresse</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Altitude</th>
                                <th>Longitude</th>

                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>

                                <td>{{ velo.id }}</td>
                                <td class="fa-image" height="100px" width="100px" style="background-image: url('{{ asset('font/uploads/' ~ velo.photo) }}')">
                                </td>
                                <td>{{ velo.type }}</td>
                                <td>{{ velo.adresse }}</td>
                                <td>{{ velo.qte }}</td>
                                <td>{{ velo.prix }}</td>
                                <td>{{ velo.latitude }}</td>
                                <td>{{ velo.longitude }}</td>

                                <td>
                                    <ul>

                                {{ form_start(delete_form) }}

                                    <input type="submit" value="Delete"  style="color: #ff6c5f">
                                {{ form_end(delete_form) }}

                                    </ul>
                                    <ul>

                                    <a href="{{ path('velo_edit',{'id':velo.id}) }}"><i class="fa fa-edit" style="color:#2e6da4 " ></i></a>

                                    </ul>
                                </td>
                            </tr>

                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </section></div>

{% endblock %}
